<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiAppCrud.Views.PersonaPage"
             Title="PersonaPage">
    <StackLayout Padding="20">
        <Entry x:Name="nombreEntry" Placeholder="Nombre" />
        <Entry x:Name="apellidoEntry" Placeholder="Apellido" />
        <Entry x:Name="edadEntry" Placeholder="Edad" Keyboard="Numeric" />

        <Button Text="Guardar" Clicked="OnSavePersona" />
        <Button Text="Eliminar" Clicked="OnDeletePersona" IsVisible="False" x:Name="deleteButton"/>
    </StackLayout>
</ContentPage>